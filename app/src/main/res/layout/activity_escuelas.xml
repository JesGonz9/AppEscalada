<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    tools:context=".EscuelaActivity">


    <TextView
        android:id="@+id/esTvNomEscuela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOCES FREE"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="35sp" />


    <TextView
        android:id="@+id/esTvLocalizacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hoces de Vegacervera (LeÃ³n)"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de escalada: "
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/esTvTipoEscalada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Placaaaa"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="SECTORES"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:textSize="25sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/esRcvSectores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

</LinearLayout>