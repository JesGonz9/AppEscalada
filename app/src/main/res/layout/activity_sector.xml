<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    tools:context=".EscuelaActivity">


    <TextView
        android:id="@+id/secTvNomSector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="El Rincón"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="35sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de escalada: "
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/secTvTipoEscalada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="placa adherencia"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grado predominante: "
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/secTvGradoPred"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5+"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grado mínimo: "
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/secTvGradoMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4-"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grado máx: "
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/secTvGradoMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6a"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Longitud media de vía: "
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/secTvGradoMedio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12m"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="VÍAS"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:textSize="25sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/secRcvVias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

</LinearLayout>